<%= content_for :header, 'Managers' %>
<% if notice.present? %>
    <div class="callout callout-success">
        <%= notice %>
    </div>
<% end %>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3></h3>
                <div class="box-tools">
                    <%= link_to new_manager_path do %>
                    <button class="btn btn-default btn-sm">
                        Add Manager
                    </button>
                    <% end %>
                </div>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody><tr>
                        <th>ID</th>
                        <th>Manager Name</th>
                        <th># Guests</th>
                        <th></th>
                    </tr>
                    <% @managers.each do |manager| %>
                    <tr>
                        <td><%= manager.id %></td>
                        <td><%= manager.name %></td>
                        <td>0</td>
                        <td class='text-right'>
                            <%= link_to manager do %>
                            <button class="btn btn-info btn-sm">
                                Show
                            </button>
                            <% end %>
                            <%= link_to edit_manager_path(manager) do %>
                            <button class="btn btn-primary btn-sm">
                                Edit
                            </button>
                            <% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
