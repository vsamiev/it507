<%= content_for :header, 'Rooms' %>
<% if notice.present? %>
    <div class="callout callout-success">
        <%= notice %>
    </div>
<% end %>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3></h3>
                <div class="box-tools">
                    <%= link_to new_room_path do %>
                    <button class="btn btn-default btn-sm">
                        Add Room
                    </button>
                    <% end %>
                </div>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody><tr>
                        <th>ID</th>
                        <th>Room Number</th>
                        <th>Building</th>
                        <th></th>
                    </tr>
                    <% @rooms.each do |room| %>
                    <tr>
                        <td><%= room.id %></td>
                        <td><%= room.number %></td>
                        <td><%= room.building.name %></td>
                        <td class='text-right'>
                            <%= link_to edit_room_path(room) do %>
                            <button class="btn btn-primary btn-sm">
                                Edit
                            </button>
                            <% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
